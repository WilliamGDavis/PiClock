<Page x:ConnectionId='1'
    x:Class="PiClock.LoggedIn"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PiClock"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
                        >

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" BorderThickness="0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <TextBlock x:ConnectionId='7' x:Name="textBlock" HorizontalAlignment="Center" Margin="0,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Height="114" Width="294"/>
        </Grid>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="60" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
            </Grid>
            <Grid Grid.Row="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid Grid.Column="0" Grid.Row="0">
                        <Button x:ConnectionId='6' x:Name="button" Content="Punch In" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Center" Width="100" Height="60"/>
                    </Grid>
                    <Grid Grid.Column="0" Grid.Row="1">
                        <Button x:ConnectionId='5' x:Name="button2" Content="Change Job" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Center" Width="100" Height="60"/>
                    </Grid>
                    <Grid Grid.Column="1" Grid.Row="0">
                        <Button x:ConnectionId='4' x:Name="button3" Content="Punch Out" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Center" Width="100" Height="60"/>
                    </Grid>
                    <Grid Grid.Column="1" Grid.Row="1">
                        <Button x:ConnectionId='3' x:Name="button4" Content="View Info" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Center" Width="100" Height="60"/>
                    </Grid>
                </Grid>
            </Grid>
            <Grid Grid.Row="2">
                <Button x:ConnectionId='2' x:Name="button_Back" Content="Back" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Center"                          />
            </Grid>
        </Grid>
    </Grid>
</Page>

